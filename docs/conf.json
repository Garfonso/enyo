{
	"tags": {
		"allowUnknownTags": false
	},
	"source": {
		"include": ["source"],
		"exclude": ["tools", "samples", "minify", "docs", "node_modules"],
		"includePattern": ".+\\.js$"
	},
	"opts": {
		"encoding": "utf8",
		"destination": "./docs/out",
		"recurse": true,
		"private": false,
		"lenient": false
	},
	"plugins": ["plugins/markdown"],
	"markdown": {
		"parser": "gfm",
		"hardwrap": false
	}
}